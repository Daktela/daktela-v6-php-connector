{
    "name": "daktela/daktela-v6-php-connector",
    "description": "Enables connecting to Daktela V6 installation REST API from PHP code",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [
        {
            "name": "Daktela",
            "email": "daktela@daktela.com"
        },
        {
            "name": "Jiri Havlicek",
            "email": "jiri.havlicek@daktela.com"
        },
        {
            "name": "Petr Kalisek",
            "email": "petr.kalisek@daktela.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "crazycodr/standard-exceptions": "^2.4",
        "guzzlehttp/guzzle": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Daktela\\": "src/",
            "Daktela\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "3.*",
        "moxio/php-codesniffer-sniffs": "^2.4",
        "consistence/coding-standard": "^3.10",
        "slevomat/coding-standard": "^6.4",
        "phpstan/phpstan": "^0.12.54"
    },
    "scripts": {
        "cs-check": "phpcs --colors -p --standard=.phpcs src/ tests/",
        "cs-fix": "phpcbf --colors --standard=.phpcs src/ tests/",
        "cs-check-file": "phpcbf --colors -p --standard=.phpcs",
        "cs-fix-file": "phpcbf --colors --standard=.phpcs",
        "test": "phpunit --colors=always"
    }
}
